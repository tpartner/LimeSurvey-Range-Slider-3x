 * @var $equals_num_value
 * @var $id
 * @var $prefix
 * @var $sumRemainingEqn
 * @var $displaytotal
 * @var $sumEqn
 * @var $prefix
 */
#}

{{ registerPackage('question-numeric-slider') }}
{% if id is null or id is not defined %}
	{% set id = basename|split('X')[2] %}
{% endif %}

<!-- Multiple Numerical -->

<!-- Answer -->
<div class="inserted-range-slider-wrapper">
	<input data-id="range{{ id }}" type="text" value="" />
</div>

<ul class='{{coreClass}} list-unstyled  form-horizontal hidden' role="group" aria-describedby="ls-question-text-{{basename}}">
    {% block rows %}
        {{sRows}}
    {% endblock %}
</ul>
<!-- endof answer -->
<script type="text/javascript" charset="utf-8">	
	$(document).on('ready pjax:scriptcomplete',function(){
		
		$('#question{{id}}').rangeSlider({
			id: '{{ id }}',
			sliderMin: '{{ question_template_attribute.range_slider_min|trim }}',
			sliderMax: '{{ question_template_attribute.range_slider_max|trim }}',
			sliderStep: '{{ question_template_attribute.range_slider_step|trim }}',
			sliderLow: '{{ question_template_attribute.range_slider_low|trim }}',
			sliderHigh: '{{ question_template_attribute.range_slider_high|trim }}',
			sliderRecord: '{{ question_template_attribute.range_slider_record }}',
			sliderPrefix: '{{ question_template_attribute.range_slider_prefix }}',
			sliderSuffix: '{{ question_template_attribute.range_slider_suffix }}',
			sliderColorL: '{{ question_template_attribute.range_slider_colour_low|trim }}',
			sliderColorM: '{{ question_template_attribute.range_slider_colour_med|trim }}',
			sliderColorH: '{{ question_template_attribute.range_slider_colour_high|trim }}',
			sliderShowMinMax: '{{ question_template_attribute.range_show_minmax }}',
			sliderMinMaxPrefix: '{{ question_template_attribute.range_minmax_prefix }}',
			sliderMinMaxSuffix: '{{ question_template_attribute.range_minmax_suffix }}',
			sliderHandleColorL: '{{ question_template_attribute.range_handle_colour_low }}',
			sliderHandleColorH: '{{ question_template_attribute.range_handle_colour_high }}'  
		});
    });
</script>






